<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.FragmentBuscar_Libro_qr"
    android:id="@+id/constrain_info_libro"
    android:visibility="invisible">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView

                android:id="@+id/txt_titulo_libro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="206dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="205dp"

                android:fontFamily="@font/copse"
                android:inputType="textCapCharacters"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/image_tapaLibro"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="64dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/avatars" />


            <TextView
                android:id="@+id/txt_autor_libro"
                style="@style/Formato_Texto"

                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:fontFamily="@font/copse"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.53"
                app:layout_constraintStart_toEndOf="@+id/image_tapaLibro"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_año_edicion"
                style="@style/Formato_Texto"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.508"
                app:layout_constraintStart_toEndOf="@+id/image_tapaLibro"
                app:layout_constraintTop_toBottomOf="@+id/txt_editorial_libro" />

            <TextView
                android:id="@+id/txt_editorial_libro"
                style="@style/Formato_Texto"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.508"
                app:layout_constraintStart_toEndOf="@+id/image_tapaLibro"
                app:layout_constraintTop_toBottomOf="@+id/txt_autor_libro" />

            <TextView
                android:id="@+id/txt_descripcion_libro"
                style="@style/Formato_Texto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="18dp"
                android:backgroundTint="@color/material_on_primary_disabled"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_tapaLibro" />

            <ImageButton
                android:id="@+id/btn_guardar_libro"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/material_on_primary_disabled"
                android:src="@drawable/disco_flexible"
                app:layout_constraintEnd_toStartOf="@+id/btn_libro_deseado"
                app:layout_constraintStart_toEndOf="@+id/image_tapaLibro"
                app:layout_constraintTop_toBottomOf="@+id/txt_año_edicion" />

            <ImageButton
                android:id="@+id/btn_libro_deseado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="28dp"
                android:src="@drawable/favorito"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_año_edicion" />


            <Button
                android:id="@+id/btn_search_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="@string/search_book"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_descripcion_libro" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>